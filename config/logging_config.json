{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "default": {
        "format": "%(asctime)s - %(module)s - %(levelname)s - Name: %(funcName)s - Line: %(lineno)d - %(message)s",
        "datefmt": "%H:%M:%S"
      },
      "colored": {
        "()": "classes.ConsoleColoursClass.ColoredFormatter",
        "format": "%(asctime)s - %(module)s - %(levelname)s - Name: %(funcName)s - Line: %(lineno)d - %(message)s",
        "datefmt": "%H:%M:%S"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "colored",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.FileHandler",
        "level": "INFO",
        "formatter": "default",
        "filename": "log/app.log",
        "mode": "w",
        "encoding": "UTF-8"
      }
    },
    "root": {
      "level": "WARNING",
      "handlers": ["console", "file"]
    }
  }
  